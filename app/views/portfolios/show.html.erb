<h1>
  <%= @portfolio.title %>
</h1>

<h3>
  <%= @portfolio.body   %>
</h3>

<h6>
  Created <%= time_ago_in_words(@portfolio.created_at) %> ago
  <% if @portfolio.created_at != @portfolio.updated_at %>
      <h6> Updated at <%= time_ago_in_words(@portfolio.updated_at) %> ago</h6>
  <% end %>
</h6>

<button><%= link_to "Edit post", edit_portfolio_path(@portfolio) %></button>
<button><%= link_to "Delete post", portfolio_path(@portfolio), method: :delete, data: {confirm: "Are you sure?"} %></button>
<button><%= link_to "Back to List", portfolio_path %></button>
